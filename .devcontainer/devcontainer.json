{
    "name": "Python 3",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "workspace",
    "workspaceFolder": "/workspace",
    "shutdownAction": "none",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        },
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": false,
                "python.formatting.provider": "none",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    }
                },
                "ruff.enable": true,
                "ruff.organizeImports": true,
                "ruff.fixAll": true,
                "workbench.colorTheme": "LinkedIn Learning Dark"
            },
            "extensions": [
                "linkedinlearning.linkedinlearning-vscode-theme",
                "ms-toolsai.jupyter",
                "ms-python.python",
                "bierner.docs-view",
                "christian-kohler.path-intellisense",
                "ms-python.vscode-pylance",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "dracula-theme.theme-dracula",
                "charliermarsh.ruff",
                "VisualStudioExptTeam.vscodeintellicode",
                "GitHub.github-vscode-theme",
                "ms-azuretools.vscode-docker",
                "DavidAnson.vscode-markdownlint",
                "vscode-icons-team.vscode-icons"
            ]
        }
    },
    "hostRequirements": {
        "storage": "32gb",
        "cpus": 4,
        "memory": "16gb"
    },
    "onCreateCommand": "echo PS1='\"$ \"' >> ~/.bashrc",
    "postAttachCommand": "git pull --all",
    "postCreateCommand": "mkdir -p ~/.ipython/profile_default/startup && cp .devcontainer/pandas-startup.py ~/.ipython/profile_default/startup/00-pandas-options.py"
}